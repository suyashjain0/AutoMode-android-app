<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/loginpg_back"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/accounts_actiona_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top|right"
                android:gravity="top|right"
                android:paddingBottom="15dp"
                android:paddingRight="8dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/setting_icon" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_campaign_credential_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="visible" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >



                <LinearLayout
                    android:id="@+id/layout_campaign_credentials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginTop="100dp"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/layout_campaign_details"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            >

                            <!-- new -->


                            <!-- new -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <!--<TextView-->
                                    <!--style="@style/HeadingFontStyle"-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_weight="1"-->
                                    <!--android:gravity="right"-->
                                    <!--android:paddingRight="18dp"-->
                                    <!--android:text="User Name"-->
                                    <!--android:textColor="#505051"-->
                                    <!--android:textSize="10dp" />-->

                                <EditText
                                    android:id="@+id/et_campaign_user_name"
                                    android:layout_width="0dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_weight="2.3"
                                    android:paddingTop="5dp"
                                    android:background="@drawable/accounts_username_selector"
                                    android:imeOptions="actionNext"
                                    android:hint="User Name"
                                    android:maxLength="126"
                                    android:paddingLeft="35dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:backgroundTint="@color/abc_primary_text_disable_only_material_light"
                                    android:textColor="#FFF"
                                    android:textSize="15dp"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal" >

                                <!--<TextView-->
                                    <!--style="@style/HeadingFontStyle"-->
                                    <!--android:layout_width="0dp"-->
                                    <!--android:layout_weight="1"-->
                                    <!--android:gravity="right"-->
                                    <!--android:paddingRight="18dp"-->
                                    <!--android:text="Password"-->
                                    <!--android:textColor="#505051"-->
                                    <!--android:textSize="10dp" />-->

                                <EditText
                                    android:id="@+id/et_campaign_password"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:maxLength="126"
                                    android:background="@drawable/accounts_password_selector"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:paddingLeft="35dp"
                                    android:paddingTop="5dp"
                                    android:singleLine="true"
                                    android:hint="Password"
                                    android:text=""
                                    android:backgroundTint="@color/abc_primary_text_disable_only_material_light"
                                    android:textColor="@android:color/white"
                                    android:textSize="15dp"
                                    android:layout_height="wrap_content" />

                                <!--<ImageView-->
                                    <!--android:id="@+id/btn_save_camapaign_details"-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:padding="5dp"-->
                                    <!--android:src="@drawable/friends_edit_icon" />-->

                                <!--<ImageView-->
                                    <!--android:id="@+id/btn_edit_camapaign_details"-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"-->
                                    <!--android:layout_marginLeft="2dp"-->
                                    <!--android:layout_marginRight="5dp"-->
                                    <!--android:src="@drawable/friends_edit_icon"-->
                                    <!--android:visibility="gone" />-->
                            </LinearLayout>

                            <Button
                                android:id="@+id/btn_login"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/fb_submit_feedback_btn"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="15dp"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp"
                                android:text="LOGIN" />

                            <Button
                                android:id="@+id/btn_logout"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/fb_submit_feedback_btn"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="15dp"
                                android:visibility="gone"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp"
                                android:text="LOGOUT" />

                            <Button
                                android:id="@+id/btn_register"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@drawable/new_user_button"
                                android:layout_gravity="bottom"
                                android:gravity="center"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="15dp"
                                android:textColor="#FFFFFF"
                                android:textSize="20dp"
                                 />


                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
